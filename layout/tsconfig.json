{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2015.Promise",
      "ES2017",
      "WebWorker"
    ],
    "target": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "types": [
      "svelte"
    ]
  },
  "rootDirs": [
    "../common",
    "."
  ],
  "include": [
    "src/**/*",
    "src/node_modules/**/*",
    "../common/**/*.ts"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "static/*"
  ]
}
